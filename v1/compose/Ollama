services:
  ollama:
    image: docker.io/ollama/ollama:latest
    container_name: ollama
    devices:
      - nvidia.com/gpu=all
    networks:
      - default
    volumes:
      - ./volumes/ollama:/root/.ollama:z
    expose:
      - 11434
    environment:
      - OLLAMA_KEEP_ALIVE=-1
    deploy:
      resources:
        limits:
          cpus: '8'
          memory: 32g
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [gpu]