services:

  ollama:
    image: docker.io/ollama/ollama:latest
    container_name: ollama
    devices:
      - nvidia.com/gpu=all
    networks:
      - default
    volumes:
      - ./volumes/ollama:/root/.ollama:z
    expose:
      - 11434
    environment:
      - OLLAMA_KEEP_ALIVE=-1
    deploy:
      resources:
        limits:
          cpus: '8'
          memory: 32g
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [gpu]

  searxng:
    image: docker.io/searxng/searxng:latest
    container_name: searxng
    volumes:
      - ./yard/Perplexica/searxng:/etc/searxng:Z
    ports:
      - 4000:8080
    networks:
      - default
    restart: unless-stopped

  app:
    image: red/perplexica:main
    container_name: perplexica
    build:
      context: .
      dockerfile: dock/Perplexica
    environment:
      - SEARXNG_API_URL=http://searxng:8080
    ports:
      - 3000:3000
    networks:
      - default
    volumes:
      - ./volumes/perplexica-data:/home/perplexica/data:Z
      - ./volumes/perplexica-uploads:/home/perplexica/uploads:Z
      - ./yard/Perplexica/config.toml:/home/perplexica/config.toml:Z
    restart: unless-stopped

networks:
  default:

volumes:
  ollama: {}
  perplexica-data: {}
  perplexica-uploads: {}
  

